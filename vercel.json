{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "^/(css|js|img|fonts|favicon\\.png)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "^/favicon\\.png$",
      "dest": "/public/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}

  